<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!--默认情况下， sitemesh 只对 HTTP 响应头中 Content-Type 为 text/html 的类型进行拦截和装饰， 我们可以添加更多的 
		mime 类型 -->
<!-- 	<mime-type>text/html</mime-type>
	<mime-type>application/vnd.wap.xhtml+xml</mime-type>
	<mime-type>application/xhtml+xml</mime-type> -->

	<!-- 默认装饰器，当下面的路径都不匹配时，启用该装饰器进行装饰 -->
	<mapping path="/view/*" decorator="/view/framemanage/main.html" />

	<!-- 对不同的路径，启用不同的装饰器 -->
	<mapping path="/view/admin/*" decorator="/view/framemanage/main.html" />

	<!-- 对同一路径，启用多个装饰器 -->
	<mapping>
		<path>/user/*</path>
		<decorator>/view/framemanage/main.html</decorator>
		<decorator>/view/framemanage/main.html</decorator>
		<decorator>/view/framemanage/main.html</decorator>
	</mapping>

	<!-- 排除，不进行装饰的路径 -->
	<mapping path="/static/*" exclue="true" />
	<mapping path="/api/*" exclue="true" />
	
	<!-- 自定义标签 -->
    <content-processor>
       <tag-rule-bundle class="com.eudemon.taurus.app.util.JsFooterIncludeTagRuleBundle" />
    </content-processor>
</sitemesh>
